    <view class="user-main">
        <view class="user-bg">
            <image class="user-bg-img" src="/static/img/mine_bg.png"></image>
        </view>
        <view class="user-card-out">
            <view class="user-head">
               <view class="house-src">挂拍房源量</view>
               <view class="house-num">{{lawData.listing}}/宗</view>
            </view>

            <view class="user-card">
                <view class="user-card-item user-card-itemfirst">
                    <view class="user-card-itemnum">{{lawData.deal}}</view>
                    <view class="user-card-itemtxt">当月成交量(宗)</view>
                </view>
                <view class="user-card-item">
                    <view class="user-card-itemnum itemnum-same-ring">
                        <text class="itemnum-raing-up">{{lawData.linkRatio}}%</text> 
                        <view class="same-ring-imgbox">
                            
                            <image src="/static/img/orage_arrow_icon.png" wx:if="{{lawData.linkRatio*1>=0}}"></image>
                            <image src="/static/img/house_downarrow_icon.png" wx:if="{{lawData.linkRatio*1<0}}"></image>
                        </view>
                    </view>
                    <view class="user-card-itemtxt">环比</view>
                </view>
                <view class="user-card-item">
                    <view class="user-card-itemnum itemnum-same-ring">
                        <text class="itemnum-same-up">{{lawData.yearOnYear}}%</text> 
                        <view class="same-ring-imgbox">
                            <image src="/static/img/red_arrow_icon.png" wx:if="{{lawData.yearOnYear*1>=0}}"></image>
                            <image src="/static/img/house_downarrow_icon.png" wx:if="{{lawData.yearOnYear*1<0}}"></image>
                        </view>
                    </view>
                    <view class="user-card-itemtxt">同比</view>
                </view>
            </view>
        </view>
    </view>

