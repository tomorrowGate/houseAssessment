     <view class="house-datas">
        <view class="house-datas-head">
            <view class="house-datas-text">小区房价走势图</view>
            <view class="house-data-tag">单位：元</view>
        </view>
        <Charts chartData="{{chartData}}" id="chart"></Charts>
    </view>

    <dialog isShowDia="{{isShowDia}}">
        <view class="housepd-dia-title">相关房屋摘要</view>
        <view class="apply-detail" wx:for="{{oneHouseMoreCard}}" wx:key="index" >
            <view class="apply-item">
                <view class="apply-nav nav1">
                    <view class="apply-item-name">{{item.address}}</view>
                    <!-- <view class="apply-item-right">
                        <view class="apply-nav-address">申请状态 {{item.stateText}}</view> 
                    </view> -->
                </view>
                <view class="apply-nav nav2">
                    <view class="apply-item-det">
                        <text class="item-det-key">单价：</text> 
                        <text class="item-det-red">{{item.apppavg||'-'}}</text>元/㎡
                    </view>
                    <view class="apply-item-det">
                            <text class="item-det-key">总价：</text>
                        <text class="item-det-red">{{item.apppall||'-'}}</text> 万元
                    </view>
                    <view class="apply-item-det apply-item-block">
                        <text class="item-det-key">取整面积：</text> 
                        {{item.area}}㎡
                    </view>
                    <view class="apply-item-det apply-item-block">
                         <text class="item-det-key">价值时点：</text>
                       {{item.appdate||'-'}}
                       <!--  {{appdate||'-'}} -->
                    </view>
                </view>
            </view>
        </view>
        <view class="housepd-dia-foot">
            <view class="dia-foot-item">
                取整面积（总计）： 
                <text class="item-det-red">{{houseAreaTotal}}</text>㎡
            </view>
            <view class="dia-foot-item">
                总价（总计）：
                <text class="item-det-red">{{housePriceTotal}}</text>万元
            </view>
        </view>
    </dialog>


