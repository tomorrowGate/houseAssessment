<view class="user">
    <view class="user-main">
        <view class="user-bg">
            <image class="user-bg-img" src="/static/img/mine_bg.png"></image>
        </view>
        <view class="user-card-out">
            <view class="user-head">
                <view class="house-src">{{houseDet.bname}}</view>
              <!--  <view class="house-src">{{houseDet.cname + houseDet.zname + houseDet.bname}}</view> -->
               <view class="house-num">{{houseDet.showUnitName}}</view>
            </view>

            <view class="user-card">
                <view class="user-card-item">
                    <view class="user-card-itemnum">{{houseDet.apppavg_init}}元/㎡</view>
                    <view class="user-card-itemtxt">估算单价</view>
                </view>
                <view class="user-card-item">
                    <view class="user-card-itemnum">{{houseDet.apppall_init}}万元</view>
                    <view class="user-card-itemtxt">估算总价</view>
                </view>
            </view>
        </view>
    </view>

    <view class="housepd-fun">
        <view class="housepd-fun-item bubble" bindtap="priceModify">
            <view class="housepd-item-imgbox">
                <image class="" src="/static/img/price_correction_icon.png"></image>
            </view>
            <text class="housepd-item-text">价格修正</text>
        </view>
        <view class="housepd-fun-item bubble" bindtap="nextTime">
            <view class="housepd-item-imgbox">
                <image class="" src="/static/img/market_anticipation_icon.png"></image>
            </view>
            <text class="housepd-item-text">市场预判</text>
        </view>
        <view class="housepd-fun-item bubble" bindtap="goCaseThink">
            <view class="housepd-item-imgbox">
                <image class="" src="/static/img/case_reference_icon.png"></image>
            </view>
            <text class="housepd-item-text">案例参考</text>
        </view>
        <view class="housepd-fun-item bubble" bindtap="goUnderLinde">
            <view class="housepd-item-imgbox">
                <image class="" src="/static/img/offline_commitment_icon.png"></image>
            </view>
            <text class="housepd-item-text">线下委托</text>
        </view>
    </view>

        <view class="user-card-modify" wx:if="{{isModifyShow}}">
            <view class="user-card-item">
                <view class="user-card-itemnum">
                <text class="user-modify-avg">{{houseDet.apppavg2}}</text> 
                元/㎡</view>
                <view class="user-card-itemtxt">修正后估算单价</view>
            </view>
            <view class="user-card-item">
                <view class="user-card-itemnum">
                <text class="user-modify-avg">{{houseDet.apppall2}}</text> 
                万元</view>
                <view class="user-card-itemtxt">修正后估算总价</view>
            </view>
        </view>
    
    <view class="housepd-table">
        <view class="housepd-table-head"> 
            <view class="house-datas-text">房产基本信息</view>
        </view>
        <view class="housepd-table-cells">
             <view class="housepd-cell-block housepd-alert">
                <view class="housepd-cell-block">
                    <text class="housepd-cell-key">警醒: </text>
                    <text class="housepd-cell-value">{{houseDet.remark?houseDet.remark:'-'}}</text>
                </view>
               <view class="housepd-alert-detail" wx:if="{{houseDet.remark}}" bindtap="lookDetail">
               详情
                <text class="iconfont icon-arrowRight-fill"></text>
               </view>
            </view>
            <view class="housepd-cell-block">
                <text class="housepd-cell-key">房屋坐落: </text>
                <text class="housepd-cell-value">{{houseDet.address}}</text>
            </view>
            <view class="housepd-cell-block">
                <text class="housepd-cell-key">小区名称: </text>
                <text class="housepd-cell-value">{{houseDet.bname}}</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">权证信息: </text>
                <text class="housepd-cell-value">{{"-"}}</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">所属城市: </text>
                <text class="housepd-cell-value">{{houseDet.cname}}</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">所属城区: </text>
                <text class="housepd-cell-value">{{houseDet.zname}} </text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">建成年份: </text>
                <text class="housepd-cell-value">{{houseDet.byear}}年</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">建筑面积: </text>
                <text class="housepd-cell-value">{{houseDet.area}}㎡</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">套内面积: </text>
                <text class="housepd-cell-value">{{houseDet.areain}}㎡ </text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">规划用途: </text>
                <text class="housepd-cell-value">{{houseDet.fusage}}</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">总  层  次: </text>
                <text class="housepd-cell-value">{{"-"}}</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">当 前  层  次: </text>
                <text class="housepd-cell-value">{{houseDet.flooronstr}}</text>
            </view>
            <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">建筑结构: </text>
                <text class="housepd-cell-value">{{houseDet.fstruct?houseDet.fstruct:'-'}}</text>
            </view>
             <view class="housepd-cell-inlineb">
                <text class="housepd-cell-key">价值时点: </text>
                <!-- <text class="housepd-cell-value">{{appdate||'-'}}</text> -->
                <text class="housepd-cell-value">{{houseDet.appdate||'-'}}</text>
            </view>
        </view>
    </view>

