@import "../applyDetail/applyDetail.wxss";
.user-main{
    position: relative;
    padding-bottom: 30rpx;
}
.user-bg{
    position: relative;
    /* height: 336rpx; */
    height: 396rpx;
     /* height: 455rpx; */
}
.user-card-out{
    position: absolute;
    top: 60rpx;
    width: 100%;
    height: 336rpx;
    box-sizing: border-box;
    z-index: 2;
}
.user-head{
    margin: auto;
    text-align: center;
    color: #fff
}
.house-src{
    letter-spacing: 4rpx;
    font-size: 40rpx;
}
.house-num{
    letter-spacing: 2rpx;
    font-size: 32rpx;
    margin-top: 30rpx
}
.user-card{
    position: absolute;
    bottom:0;
    width:100%;
    display: flex;
    margin-top: 40rpx;
    background: #1165FF;
    color: #CADCFC;
    border-top:1rpx solid #0F66FF;
}
.user-card-modify{
    display: flex;
    width:calc(100% - 40rpx);
    margin:1rpx auto;
    color:#fff;
   /* padding: 0 16rpx; */
    background: rgb(14,102,252);
    border-radius:6rpx 50rpx 6rpx 50rpx;
}
.user-modify-avg{
    color:rgb(250,186,11)
}
.user-card-item{
    flex: 1;
    padding: 27rpx;
    text-align: center;
}
.user-card-itemnum{
    font-size: 30rpx;
}
.user-card-itemtxt{
    margin-top: 12rpx;
}

/* 价格修正 */
.housepd-fun{
    display: flex;
    padding: 30rpx 0;
    border-bottom: 20rpx solid #F6F6F6;
}
.housepd-fun-item{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.housepd-item-imgbox{
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 24rpx;
}

/* 房产信息 */
.housepd-table{
    padding: 50rpx 30rpx;
    border-bottom: 20rpx solid #F6F6F6;

}
.housepd-table-head{
    padding-bottom: 8rpx;
    font-size: 30rpx;
    font-weight: 600;
}
.house-datas-text::before{
    position: absolute;
    display: block;
    transform: translateY( 12rpx );
    width: 26rpx;
    height: 26rpx;
    content: "";
    border-radius: 16rpx 24rpx 14rpx 6rpx; 
    background:rgb(127,174,255);
    z-index: -1;
}
.housepd-cell-block{
    padding: 25rpx 0;
}
.housepd-cell-inlineb{
    padding: 25rpx 0;
    display: inline-block;
    width: 50%;
}
.housepd-cell-key{
    color: #999
}
.housepd-cell-value{
}

.tableScroll{
  white-space: nowrap;
  box-sizing: border-box;
  position: relative;
}
.tr{
    border-bottom: 1rpx solid #F6F6F6;
}
.th {
    min-width: 230rpx;
    font-weight: 400;
    box-sizing: border-box;
    display: inline-block;
    color: #999999;
}
.td{
 /*  border-bottom: 1px dashed #d7d7d7; */
  color: #999999;
  box-sizing: border-box;
  display: inline-flex;
  justify-content: center;
}
.tr .tablest{
  /* width: 190rpx;
  padding: 20rpx 2rpx; */
  width: 230rpx;
  padding: 20rpx 50rpx 20rpx 10rpx;
  /* white-space: normal; */
  /* 换行后文字居中麻烦 */
}
.th, .td {
  width: 230rpx;
  padding: 20rpx 10rpx;  
  text-align: center;
  font-size: 26rpx;
}
.tr:nth-of-type(1) {
  height: 75rpx;
  color: white;
  position: relative;
  z-index: 1;
}
.td-imgbox{
    width: 15rpx;
    height: 22rpx;
    margin-left: 4rpx;
}
/* 房屋数据 */
.house-datas{
    padding: 30rpx;
   border-bottom: 20rpx solid #F6F6F6
}
.house-datas-head{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.house-datas-text{
    font-size: 30rpx;
    font-weight: 600;
}
.house-data-tag{
    padding: 0 20rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 20rpx;
    background: #F0F4FA;
    color: #999999;
    border-radius: 22rpx;
}
.house-data-body{
    height: 550rpx;
}
.housepd-alert{
    display: flex;
    align-items: center;
    justify-content: space-between;
    white-space: wrap;
    color: #f20c00
}
.housepd-alert .housepd-cell-key{
    color: #f20c00
}
.housepd-alert-detail{
    display: flex;
    align-items: center;
    width: 70rpx;
    text-align: center;
}
/* 弹窗 */
.housepd-dia-title{
    width: 100%;
    height: 56rpx;
    padding-top: 30rpx;
    line-height: 56rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: 600;
}
.housepd-alert-detail {
    width: 88rpx
}
.apply-detail {
    display: flex;
    flex-direction: column;
    padding: 0rpx;
    margin: 20px auto 0;
    width: calc( 100% - 60rpx);
    box-shadow: 0 5rpx 10rpx #ccc;
    box-sizing: border-box;
}
.item-det-red{
    color: #f20c00
}
.housepd-dia-foot{
    padding: 30rpx 30rpx 0 30rpx;
}
.dia-foot-item{
    text-align: right;
}