}

.tableScroll{
  white-space: nowrap;
  box-sizing: border-box;
  position: relative;
}
.tr{
    border-bottom: 1rpx solid #F6F6F6;
}
.th {
  min-width: 100rpx;
  font-weight: 400;
  box-sizing: border-box;
  display: inline-block;
  color: #999999;
}
.td{
  color: #999999;
  box-sizing: border-box;
  display: inline-block;
}
.tr .tablest{
  /* width: 190rpx;
  padding: 20rpx 2rpx; */
  width: 150rpx;
  padding: 20rpx 50rpx 20rpx 10rpx;
  /* white-space: normal; */
  /* 换行后文字居中麻烦 */
}
.th, .td {
  width: 150rpx;
  padding: 20rpx 10rpx;  
  text-align: center;
  font-size: 26rpx;
}
.tr:nth-of-type(1) {
  height: 75rpx;
  color: white;
  position: relative;
  z-index: 1;
}

.container1,.ec-canvas{
    width: 680rpx;
    height: 550rpx;
}