<view class="user">
    <view class="user-main">
        <view class="user-bg">
            <image class="user-bg-img" src="/static/img/mine_bg.png"></image>
        </view>
        <view class="user-card-out">
            <view class="user-head">
               <view class="house-src">挂牌房源量</view>
               <view class="house-num">{{secHouseData.linsting||0 }}/套</view>
            </view>

            <view class="user-card">
                <view class="user-card-item user-card-itemfirst">
                    <view class="user-card-itemnum">{{secHouseData.deal||0}}</view>
                    <view class="user-card-itemtxt">近1个月成交量(套)</view>
                </view>
                <view class="user-card-item">
                    <view class="user-card-itemnum itemnum-same-ring">
                        <text class="itemnum-raing-up">{{secHouseData.linkRatio||0}}%</text> 
                        <view class="same-ring-imgbox">
                            <image src="/static/img/orage_arrow_icon.png" wx:if="{{secHouseData.linkRatio*1>=0}}"></image>
                            <image src="/static/img/house_downarrow_icon.png" wx:if="{{secHouseData.linkRatio*1<0}}"></image>
                        </view>
                    </view>
                    <view class="user-card-itemtxt">环比</view>
                </view>
                <view class="user-card-item">
                    <view class="user-card-itemnum itemnum-same-ring">
                        <text class="itemnum-same-up">{{secHouseData.yearOnYear||0}}%</text> 
                        <view class="same-ring-imgbox">
                            <image src="/static/img/red_arrow_icon.png" wx:if="{{secHouseData.yearOnYear*1>=0}}"></image>
                            <image src="/static/img/house_downarrow_icon.png" wx:if="{{secHouseData.yearOnYear*1<0}}"></image>
                        </view>
                    </view>
                    <view class="user-card-itemtxt">同比</view>
                </view>
            </view>
        </view>
    </view>

    <view class="house-tag-group">
        <picker 
        mode="selector" 
        range="{{arrayCity}}" 
        range-key="name"
        class="house-tag-picker " 
        bindchange="bindPickerChangeCity" >
            <view class="house-tag-item bubble">
                <view class="house-tag-text">{{pickerCityValue||"选择城区"}}</view>
                <view class="house-tag-imgbox">
                    <image src="/static/img/drop-down_icon.png"></image>
                </view>
            </view>
        </picker>

