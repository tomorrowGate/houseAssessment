    <view class="house-datas">
        <view class="house-datas-head">
            <view class="house-datas-text">挂牌量/成交量</view>
            <view class="house-data-tag">单位：/套</view>
        </view>
        <Charts chartData="{{chartData}}" id="chart1"/>
    </view>
