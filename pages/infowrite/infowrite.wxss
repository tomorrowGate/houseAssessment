/* pages/priceModify/priceModify.wxss */
.appraise{
    background: #F6F6F6;
    padding-bottom: 300rpx;
}
.appraise-con{
    background: #F7F5F6;
    padding: 24rpx 0 0 0;
}
.appraise-cell-block{
    padding: 0rpx 24rpx;
    background: #fff;
    font-size: 32rpx;
}
.appraise-cell{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 44rpx 0;
    font-size: 32rpx;
}
.appraise-cell+.appraise-cell{
    border-top:1rpx solid #F2F2F2 
}
.appraise-cell-value{
    display: flex;
    align-items: center;
    color: #CCCCCC
}
.appraise-cell-housetype input{
    width: 40rpx;
    text-align: center;
    border-bottom:1rpx solid #ddd;
}
.cell-value-input{
    text-align: right;
    color: #000
}
.plh-ipt{
    color: #CCCCCC
}

.modify-price-btns{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    background: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    box-shadow: 2rpx 0 8rpx #f6f6f6;
    z-index:2;
}
.modify-price-btn{
    width: 100%;
    height: 100%;
    background: #005DFE;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    border-radius: 10rpx;
}